#needsharebutton-postbottom {
    width: 35px;
    height: 20px;
    line-height: 20px;
    font-size: 14px;
    color:  #000000;
    background: #ffffff;
    border: 1px solid #777777;
    border-radius: 4px;
    text-align: center;
    cursor: pointer;
    margin-top: 10px;
}

#needsharebutton-postbottom:hover {
    color: #ffffff;
    background: #000000;
    border: 1px solid #000000;
}

#needsharebutton-float {
    position: fixed;
    bottom: 38px;
    left: -7px;
    z-index: 9999;
    color: #555555;
    background: rgba(255,255,255,0.6);
    width: 35px;
    cursor: pointer;
    text-align: center;
    border: 1px solid #999999;
    border-radius: 4px;
}

#needsharebutton-float:hover {
    color: #ffffff;
    background: #000000;
    border: 1px solid #000000;
}