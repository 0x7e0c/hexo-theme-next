#need-share-button-postbottom {
    color:  #000000;
    background: #ffffff;
    border: 1px solid #555555;
    border-radius: 4px;
    padding: 4px 15px;
    cursor: pointer;
}

#need-share-button-postbottom:hover {
    color: #ffffff;
    background: #000000;
    border: 1px solid #000000;
}

#need-share-button-float {
    position: fixed;
    bottom: 38px;
    left: -7px;
    z-index: 9999;
    color: #555555;
    background: rgba(255,255,255,0.6);
    width: 35px;
    cursor: pointer;
    text-align: center;
    border: 1px solid #999999;
    border-radius: 4px;
}

#need-share-button-float:hover {
    color: #ffffff;
    background: #000000;
    border: 1px solid #000000;
}